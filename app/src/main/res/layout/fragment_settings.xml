<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.funk.paupowpow.fotohop.fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/dark"
        android:gravity="top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/discovery_switch_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="discovery mode"
                android:textColor="@color/light"
                android:textSize="26sp"
                android:layout_weight="3"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/p2pkit_switch"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="allow fotohop to look for new quests, including while the app is running in the background.
disabling this will prevent you from receiving and passing on quests."
            android:layout_marginRight="80dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/light"
            android:textSize="12sp"/>


    </LinearLayout>


</FrameLayout>
